#include <stdio.h>
#include <stdlib.h>

int main()
{
    char a[100], b[100], c[100];
    int ta,tb,tc,tamanho, i;


    printf("Insira o trecho\n");
    fgets(a,100,stdin);
    tamanho=strlen(a);
    a[tamanho-1]='\0';
    ta=tamanho;

    printf("Insira o trecho\n");
    fgets(b,100,stdin);
    tamanho =strlen(b);
    b[tamanho-1]='\0';
    tb=tamanho;

    printf("Insira o trecho\n");
    fgets(c,100,stdin);
    tamanho =strlen(c);
    c[tamanho-1]='\0';
    tc=tamanho;


    for (i=0; i<ta; i++){
        printf("%c", a[i]);
    }

    printf(" ");

     for (i=0; i<tb; i++){
        printf("%c", b[i]);
    }

    printf(" ");

     for (i=0; i<tc; i++){
        printf("%c", c[i]);
    }
}
